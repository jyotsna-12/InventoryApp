<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/list_item_margin">

        <LinearLayout style="@style/LinearLayout1">

            <LinearLayout style="@style/LinearLayout2">

                <TextView
                    android:id="@+id/product_name"
                    style="@style/ListItemText"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="@dimen/list_item_textview_marginRight"
                    android:textColor="#000"
                    android:textSize="20sp"
                    tools:text="product name" />
            </LinearLayout>

            <LinearLayout
                style="@style/LinearLayout2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/product_quantity"
                    style="@style/ListItemText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    tools:text="product quantity" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout style="@style/LinearLayout1">

            <LinearLayout style="@style/LinearLayout2">

                <LinearLayout style="@style/LinearLayout2">

                    <TextView
                        android:id="@+id/product_price"
                        style="@style/ListItemText"
                        android:layout_width="wrap_content"
                        tools:text="product price" />
                </LinearLayout>

                <LinearLayout style="@style/LinearLayout2">

                    <LinearLayout style="@style/LinearLayout1">

                        <LinearLayout style="@style/LinearLayout2">

                            <Button
                                android:id="@+id/button_for_sale_feature"
                                style="@style/buttonstyle"
                                android:text="@string/sale" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/LinearLayout2"
                            android:layout_width="2dp"
                            android:layout_marginLeft="@dimen/list_item_linearlayout_marginLeft"
                            android:layout_marginStart="@dimen/list_item_linearlayout_marginLeft">

                            <Button
                                android:id="@+id/edit_button"
                                style="@style/buttonstyle"
                                android:text="@string/edit" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
